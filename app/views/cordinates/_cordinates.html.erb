<div class="col-md-4">
  <div class="card mb-4">
    <%= image_tag cordinate.image %>
    <div class="card-body">
      <p class="card-text"><%= cordinate.title %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Read More', cordinate_path(cordinate) %></button>
          <%= render 'favorites/favorite_button', cordinate: cordinate %>
        </div>
      </div>
    </div>
  </div>
</div>